<Window x:Class="TripRadar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TripRadar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#726EFF"/>
            <GradientStop Color="#212B38" Offset="1"/>
            <GradientStop Color="#FF08C6AB" Offset="0.502"/>
            <GradientStop Color="#FF5AFFE7" Offset="0.237"/>
            <GradientStop Color="#FF37465B" Offset="0.787"/>
            <GradientStop Color="#FF212B38" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <TabControl TabStripPlacement="Bottom" Background="#FF37465B" BorderBrush="White"  Margin="10,10,10,9" Foreground="White" SelectionChanged="TabControl_SelectionChanged" BorderThickness="0,0,0,0">
        <TabItem Name="Flights" Margin="-17,0,-92,-2" >
            <TabItem.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FF5AFFE7" Offset="1"/>
                </LinearGradientBrush>
            </TabItem.Background>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Height="60">
                    <materialDesign:PackIcon Kind="Plane"
                        Width="56"
                        Height="50"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        Foreground="#FF212B38"/>
                    <TextBlock Text="Flights"
                        VerticalAlignment="Center"
                        FontSize="30"
                        FontFamily="Calibri"
                        Foreground="#FF212B38" FontWeight="Bold"/>
                </StackPanel>
            </TabItem.Header>
            <Grid Margin="0">
                <Image x:Name="Logo2" HorizontalAlignment="Left" Height="84" Margin="10,0,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="93" Source="/ChatGPT Image Feb 2, 2026, 02_40_34 PM.png">
                    <Image.Effect>
                        <DropShadowEffect/>
                    </Image.Effect>
                </Image>
                <Label x:Name="Name2" Content="TripRadar" HorizontalAlignment="Left" Height="64" Margin="100,10,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="185" FontWeight="Bold" FontSize="36" Foreground="#FF5AFFE7">
                    <Label.Effect>
                        <DropShadowEffect/>
                    </Label.Effect>
                </Label>
                <Rectangle Fill="Blue" Margin="10,90,10,10" Grid.Row="1"/>
                <Button Content="Search Flights" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="120" Height="30" Click="Button_Click"/>
            </Grid>



        </TabItem>
        <TabItem Name="Hotels" Margin="92,0,-201,-2" BorderThickness="20,20,200,20">
            <TabItem.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5AFFE7" Offset="1"/>
                    <GradientStop Color="White" Offset="0"/>
                </LinearGradientBrush>
            </TabItem.Background>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Height="60">
                    <materialDesign:PackIcon Kind="Hotel"
                        Width="56"
                        Height="50"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        Foreground="#FF212B38"/>
                    <TextBlock Text="Hotels"
                        VerticalAlignment="Center"
                        FontSize="30"
                        FontFamily="Calibri"
                        Foreground="#FF212B38" FontWeight="Bold"/>
                </StackPanel>
            </TabItem.Header>
            <Grid Margin="21,-314,22,23">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Image x:Name="Logo1" HorizontalAlignment="Left" Height="84" Margin="-15,319,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="93" Source="/ChatGPT Image Feb 2, 2026, 02_40_34 PM.png">
                    <Image.Effect>
                        <DropShadowEffect/>
                    </Image.Effect>
                </Image>
                <Label x:Name="Name1" Content="TripRadar" HorizontalAlignment="Left" Height="64" Margin="69,325,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="185" FontWeight="Bold" FontSize="36" Foreground="#FF5AFFE7">
                    <Label.Effect>
                        <DropShadowEffect/>
                    </Label.Effect>
                </Label>


            </Grid>
        </TabItem>
        <TabItem Name="CarHire" Margin="201,0,-310,-2" BorderThickness="20,20,200,20">
            <TabItem.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FF5AFFE7" Offset="1"/>
                </LinearGradientBrush>
            </TabItem.Background>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Height="60">
                    <materialDesign:PackIcon Kind="Car"
                        Width="56"
                        Height="50"
                        VerticalAlignment="Center"
                        Margin="-20,0,10,0"
                        Foreground="#FF212B38"/>
                    <TextBlock Text="Car Hire"
                        VerticalAlignment="Center"
                        FontSize="30"
                        FontFamily="Calibri"
                        Foreground="#FF212B38" FontWeight="Bold"/>
                </StackPanel>
            </TabItem.Header>
            <Grid Margin="21,-314,22,23">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="26*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0*"/>
                    <RowDefinition Height="313*"/>
                    <RowDefinition Height="318*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <Image x:Name="Logo" HorizontalAlignment="Left" Height="84" Margin="-15,6,0,0" VerticalAlignment="Top" Width="93" Source="/ChatGPT Image Feb 2, 2026, 02_40_34 PM.png" Grid.Row="2">
                    <Image.Effect>
                        <DropShadowEffect/>
                    </Image.Effect>
                </Image>
                <Label x:Name="Name" Content="TripRadar" HorizontalAlignment="Left" Height="64" Margin="69,12,0,0" VerticalAlignment="Top" Width="185" FontWeight="Bold" FontSize="36" Foreground="#FF5AFFE7" Grid.ColumnSpan="2" Grid.Row="2">
                    <Label.Effect>
                        <DropShadowEffect/>
                    </Label.Effect>
                </Label>



            </Grid>
        </TabItem>
        <TabItem Margin="-29,-319,33,317" >
            <TabItem.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FF5AFFE7" Offset="1"/>
                </LinearGradientBrush>
            </TabItem.Background>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Height="60" Width="68">
                    <materialDesign:PackIcon Kind="Account"
                        Width="56"
                        Height="50"
                        VerticalAlignment="Center"
                        Margin="5,0,10,0"
                        Foreground="#FF212B38"/>

                </StackPanel>
            </TabItem.Header>
            <Grid Margin="21,-314,22,23">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="759*"/>
                    <ColumnDefinition Width="35*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            </Grid>


        </TabItem>
        <TabItem Margin="-29,-319,-14,317" >
            <TabItem.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FF5AFFE7" Offset="1"/>
                </LinearGradientBrush>
            </TabItem.Background>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Height="60">
                    <materialDesign:PackIcon Kind="BagPersonal"
                        Width="56"
                        Height="50"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        Foreground="#FF212B38"/>
                    <TextBlock Text="My Trips"
                        VerticalAlignment="Center"
                        FontSize="30"
                        FontFamily="Calibri"
                        Foreground="#FF212B38" FontWeight="Bold"/>
                </StackPanel>
            </TabItem.Header>
            <Grid Margin="21,-314,22,23">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="759*"/>
                    <ColumnDefinition Width="35*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0*"/>
                    <RowDefinition/>
                    
                </Grid.RowDefinitions>
                
            </Grid>
            


        </TabItem>
    </TabControl>
</Window>
    
